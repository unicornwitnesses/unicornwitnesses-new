{
	"extends": "stylelint-config-standard",
	"plugins": ["stylelint-scss"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["define-mixin", "mixin", "include"]
			}
		],
		"selector-pseudo-class-no-unknown": [
			true,
			{
				"ignorePseudoClasses": ["global", "local"]
			}
		],
		"indentation": "tab"
	}
}
